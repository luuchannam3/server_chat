{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/prefer-default-export": "off",
        "no-console": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "max-len": ["error", { "code": 150, "tabWidth": 2 }]
    }
}
