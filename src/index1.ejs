<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: relative; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: 0.5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <ul>
      <% for(var i=0;i<listMessage.length;i++){ %>
        <li><span><%= listMessage[i].isSender%></span><span>  </span><span></span><%= listMessage[i].Content%></span></span></li>
      <% } %>
    </ul>
    <ul id="messages"></ul>
    <form action="/" id="chat" method="POST">
      <input id="m" autocomplete="off" /><input type="submit" value="Send" />
    </form>
    <p id="type"></p>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        $(function(){
            var socket=io('/room')
            $('#chat').submit(function(e){
                var id_sender = '<%= id_sender %>'
                var conversation_id = '<%= conversation_id %>'
                e.preventDefault()
                var message = $('#m').val()
                // console.log(id_sender)
                // console.log(conversation_id)
                // console.log(message)
                var data = {id_sender: id_sender,conversation_id: conversation_id, message: message};
                socket.emit('chat message',data)
                $('#m').val()
                return false
            })
            //
            socket.on('chat message',function(msg){
                $('#messages').append($('<li>').text(msg))
            })
          })
        </script>
</body>
</html>